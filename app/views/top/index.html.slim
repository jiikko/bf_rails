  $(function() {
    setInterval(function(){ $.get('/prices.js'); }, 1000);
    setInterval(function(){ build_trade_link() }, 3000);
  });

  function build_trade_link() {
    const min_price = parseInt($('[data-name=min_10_price]').text());
    const max_price = parseInt($('[data-name=max_10_price]').text());
    const diff = max_price - min_price;
    const step = diff / 5;
    $('[data-role="buy"]').children().remove()
    for(i=1; i <= 5; i++) {
      var price = min_price + (step * i);
      $("[data-role='buy']").append(`<td>${price}</td>`);
    }
  }
